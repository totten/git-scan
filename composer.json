{
    "name": "totten/git-scan",
    "description": "CLI tool for scanning/updating git repos",
    "license": "AGPL-3.0",
    "authors": [
        {
            "name": "Tim Otten",
            "email": "totten@civicrm.org"
        }
    ],
    "require": {
        "php": ">=7.3.0",
        "symfony/console": "~5.4",
        "symfony/process": "~5.4",
        "symfony/filesystem": "~5.4",
        "symfony/finder": "^4.4",
        "civicrm/composer-downloads-plugin": "~3.0"
    },
    "autoload": {
        "psr-0": {
            "GitScan\\": "src/"
         }
    },
    "bin": [
        "bin/git-scan"
    ],
    "config": {
        "platform": {
            "php": "7.3.0"
        },
        "bin-dir": "bin",
        "allow-plugins": {
            "civicrm/composer-downloads-plugin": true
        }
    },
    "extra": {
        "downloads": {
            "box": {
                "url": "https://github.com/humbug/box/releases/download/3.16.0/box.phar",
                "path": "extern/box",
                "type": "phar"
            }
        }
    }
}
